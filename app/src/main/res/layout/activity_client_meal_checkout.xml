<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealCheckout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.001" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Order Details"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#EC1B24"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.004" />

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Price"
                android:textColor="#EC1B24"
                android:textSize="20sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.001" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderDeliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deliver to:"
                    android:textColor="#EC1B24"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/orderDeliverText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/orderCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Credit Card:"
                    android:textColor="#EC1B24"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/orderCardText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/orderEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email:"
                    android:textColor="#EC1B24"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/orderEmailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/orderFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name:"
                    android:textColor="#EC1B24"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderFirstText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="NA" />

                    <TextView
                        android:id="@+id/orderLastText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NA" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="55.5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/orderCVV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CVV:"
                    android:textColor="#EC1B24"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/orderCVVText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="55.5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/orderExpiration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Expiration:"
                    android:textColor="#EC1B24"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/orderExpirationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_weight="0.001" />

        <Button
            android:id="@+id/orderConfirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.001"
            android:text="Confirm Purchase" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>