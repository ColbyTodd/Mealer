<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/mealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Title"
            android:textColor="#EC1B24"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/mealDesc"
            android:layout_width="305dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Meal Description"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mealAllergens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Allergens"
                android:textAlignment="textStart"
                android:textColor="#EC1B24"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealCuisineType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cuisine Type"
                android:textAlignment="textStart"
                android:textColor="#EC1B24"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingredients"
                android:textAlignment="textStart"
                android:textColor="#EC1B24"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mealAllergenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="None"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/mealCuisineTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="None"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/mealIngredientsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="None"
                android:layout_gravity="right" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mealTypeHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal Type"
                android:textAlignment="textStart"
                android:textColor="#EC1B24"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="None" />

        </LinearLayout>

        <TextView
            android:id="@+id/mealPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="$"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="34sp" />

        <Button
            android:id="@+id/mealDetailProceed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Proceed to Checkout" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>